<div id="<%= dom_id link %>">
  <p>
  <strong>Url acortada:</strong>
  <%= 'chq.to:3000/l/' + link.slug %>
  </p>

  <p>
    <strong>Url:</strong>
    <%= link.url %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= link.slug %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= link.name %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= link.type %>
  </p>
  
  <% if link.type == 'TemporalLink' %>
  <p>
    <strong>Expiration date:</strong>
    <%= link.expiration_date %>
  </p>
  <% end %>

  <% if link.type == 'PrivateLink' %> 
  <p>
    <strong>Password:</strong>
    <%= link.password %>
  </p>
  <% end %>

  <% if link.type != 'EphemeralLink' %>
  <p>
    <strong>Accesos:</strong>
    <% if link.accesses_count %>
      <%= link.accesses_count %>
    <% else %>
      0
    <% end %>
  </p>
  <% end %>
</div>
